[flake8]
max-line-length = 88
extend-ignore =
    E203,
    E501,
    W503,
    C901,
    D100,
    D101,
    D102,
    D103,
    D104,
    D105
exclude = 
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    .tox
per-file-ignores =
    # Tests can have longer lines and different patterns
    tests/*:E501,F401,F811
    # Init files can have unused imports
    __init__.py:F401
    # Scripts can be more flexible
    *.py:E402
max-complexity = 12
import-order-style = google 
